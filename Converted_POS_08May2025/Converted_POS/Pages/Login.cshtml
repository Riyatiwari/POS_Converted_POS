    <script src="~/js/html5shiv.js"></script>
    <script src="~/js/respond.min.js"></script>
    <script src="~/js/vendors/iCheck/icheck.min.js"></script>
    <script src="~/js/vendors/iCheck/custom.min.js"></script>

</body>
</html>