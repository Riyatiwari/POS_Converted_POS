        .btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #0078c8;
            color: #fff;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #13335A;
            }

        .forget-password {
            text-align: center;
            margin-top: 20px;
        }

            .forget-password a {
                color: #0078c8;
                text-decoration: none;
            }

                .forget-password a:hover {
                    text-decoration: underline;
                }

        .clearfix {
            clear: both;
        }

        .version {
            text-align: center;
            margin-top: 20px;
            color: red;
            font-size: 14px;
        }

        .xui-bodywrapper {
            font-size: .9375rem;
            line-height: 1.5rem;
            color: #000a1e;
            font-family: "HelveticaNeue",Helvetica,Arial,sans-serif;
            align-content: center;
        }

        .xui-padding-top-small {
            padding-top: 12px;
        }
    </style>
</head>
<body style=" opacity: 0.9;">


    <div class="xui-bodywrapper">

        <div class="header">

            <img src="~/images/bg/logo_dark-1.png" alt="TenderPOS Logo" />
        </div>



        @*<div class="header-content">
                <h2 class="xui-padding-top-small">Log In</h2>
            </div>*@

    </div>


    <form class="page-form" method="post" style="width: 350px; margin-left: auto; margin-right: auto;">

        <div class="body-content">
            <div class="row mbm text-center">
                <label ID="lblMsg" runat="server" Text="" class="require"></label>
            </div>

            <div id="divLogin" runat="server">
                <div class="form-group">
                    <div class="input-icon">
                        <input asp-for="clsLogin.StoreName" placeholder="Store Name" tabindex="1" class="form-control" />
                        @*<i class="fa fa-home"></i>*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-icon">
                        <input asp-for="clsLogin.UserName" placeholder="TillCode" tabindex="1" class="form-control" />
                        @*<i class="fa fa-user"></i>*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-icon">
                        <input asp-for="clsLogin.Password" type="password" placeholder="Password" tabindex="2" class="form-control" />
                        @*<i class="fa fa-key"></i>*@
                    </div>
                </div>
                <div style="margin-top:15px;">
                    <div class="form-group">
                        <input type="submit" value="Log In" class="btn" asp-page-handler="Login" />
                    </div>
                </div>

                <div class="clearfix"></div>
                <br />
                <div class="forget-password">
                    @*<h4>Forgotten your Password?</h4>*@
                    <div style="float:left"><a asp-page="/BackOffice/Reset_Password">Forgot Password?</a></div>
                    <div style="float:right"><a asp-page="/SignIn">Signin using Email</a></div>
                </div>

            </div>
        </div>

    </form>
    <div class="version" style="">
        <label ID="lblVersion" runat="server" style="color: #0078c8; text-decoration: none;" Text="Version 1.0.3.0.0.0"></label>
    </div>



