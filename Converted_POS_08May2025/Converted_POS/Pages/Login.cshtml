        }

        body {
            margin: 0;
            padding: 0;
            /*font-family: Arial, sans-serif;*/
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            background: #fff;
            opacity: 0.9;
            overflow-y: hidden;
            box-sizing: border-box;
            min-height: 100%;
        }

        .header {
            text-align: center;
            margin-top: 150px;
        }

            .header img {
                width: 300px;
            }


        .form-group {
            margin-bottom: 0px;
        }

        .input-icon input {
            padding-left: 10px !important;
        }

        .form-control::placeholder {
            color: #000000;
        }

        .page-form .body-content p a {
            color: #166DB1;
        }

        .form-control {
