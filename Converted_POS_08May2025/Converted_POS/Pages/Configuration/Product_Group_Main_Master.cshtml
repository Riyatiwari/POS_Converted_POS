    <input type="hidden" id="hfmaincategory_id" name="category_id" asp-for="DType.category_id" />
    <br />
    <div class="col-lg-12 ">
        <div class="panel panel-yellow">
            <div class="panel-heading">Group Master</div>
            <div class="panel-body pan">
                <div class="form-body pal">
                    <div class="col-md-12">
                        <div class="form-group">
