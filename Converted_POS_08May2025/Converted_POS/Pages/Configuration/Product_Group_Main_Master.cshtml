                                    <label asp-for="DType.department_id">Department<span class="text-danger">*</span></label>
                                    <select asp-for="DType.department_id" name="DType.department_id" class="form-control">
                                        <option value="">Select</option>
                                        @foreach (var item in Model.DTdepartment)
                                        {
                                            var selectedAttribute = item.Value == Model.DType?.department_id.ToString() ? "selected" : "";

                                            var optionHtml = $"<option value=\"{item.Value}\" {selectedAttribute}>{item.Text}</option>";

                                            @Html.Raw(optionHtml)
                                        }
                                    </select>
                                    <span asp-validation-for="DType.department_id" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DType.name">Name <span class="text-danger">*</span></label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.name" placeholder="Name" />
                                <span asp-validation-for="DType.name" class="text-danger"></span>
                            </div>
                            <div class="clearfix"></div>
                            <br />
                            <div class="col-md-6">
                                <label asp-for="DType.description">Description</label>
                                <div class="clearfix"></div>
                                <textarea class="form-control" asp-for="DType.description" placeholder="Description" rows="4"></textarea>
                                @*<input class="form-control" asp-for="DT.description" inputmode="full-width-latin" placeholder="Description" />*@
                                <span asp-validation-for="DType.description" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DType.web_sales_description">Web Sales Description</label>
                                <div class="clearfix"></div>
                                @*<input class="form-control" asp-for="DT.web_sales_description" inputmode="full-width-latin" placeholder="Web Sales Description" />*@
                                <textarea class="form-control" asp-for="DType.web_sales_description" placeholder="Web Sales Description" rows="4"></textarea>
                                <span asp-validation-for="DType.web_sales_description" class="text-danger"></span>
                            </div>
                            <div class="clearfix"></div>
                            <br />
                            <div class="col-md-6">
                                <label asp-for="DType.sorting_no">Sorting No </label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.sorting_no" placeholder="Sorting No" />
                                <span asp-validation-for="DType.sorting_no" class="text-danger"></span>
                            </div>

                            <div class="clearfix"></div>
                            <br /> &nbsp;&nbsp;&nbsp;&nbsp;
