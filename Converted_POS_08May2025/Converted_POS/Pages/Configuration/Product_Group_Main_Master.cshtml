                                    <label asp-for="DType.is_active">Active</label>
                                    <input asp-for="DType.is_active" type="checkbox" checked="checked" />
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="DType.click_and_collect">Click and Collect</label>
                                    <input asp-for="DType.click_and_collect" type="checkbox" />
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="DType.deliver">Deliver</label>
                                    <input asp-for="DType.deliver" type="checkbox" />
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="DType.Order_at_table">Order at table</label>
                                    <input asp-for="DType.Order_at_table" type="checkbox" />
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <br />
                            <div class="col-md-6">
                                <input type="hidden" name="ImageFileName" id="ImageFileName" value="@ViewData["Base64Image"]" />
                                <label asp-for="DType.Aimage">
                                    Upload :<input id="File1" type="file" name="AimageFile" />
                                    @if (ViewData["Base64Image"] != null)
                                    {
                                        <img src="@ViewData["Base64Image"]" alt="Image" height="100px" width="100px" />}
                                    else
                                    {
                                    }
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions text-right pal">
                <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="Save" />
                <input type="submit" value="Reset" class="btn btn-primary" asp-page-handler="Reset" />
                <input type="submit" value="Cancel" class="btn btn-primary" formnovalidate asp-page-handler="Cancel" />
