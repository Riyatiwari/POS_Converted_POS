@page
@model Converted_POS.Pages.Master_Setting.DepartmentCategory_masterModel
@{
    ViewData["Title"] = "DepartmentCategory_master";
}


@section link {

    <div class="page-header pull-left">
        <ol class="breadcrumb page-breadcrumb pull-left">
            <li>
                <i class="fa fa-home"></i>&nbsp;<a asp-page="/Dashboard">Home</a>&nbsp;&nbsp;
                <i class="fa fa-angle-right"></i>&nbsp;&nbsp;
            </li>
            <li class="active">
                <a asp-page="/Master_Setting/DepartmentCategory_list">Department Category list</a>&nbsp;&nbsp;
                <i class="fa fa-angle-right"></i>&nbsp;&nbsp;
            </li>
            <li class="active"><a asp-page="/Master_Setting/DepartmentCategory_master">Department Category Master</a></li>
        </ol>
    </div>

}


    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="DType.department_category_id" />
        <br />

        <div class="col-lg-12 ">
            <div class="panel panel-yellow">
                <div class="panel-heading">Department Category Master</div>
                <div class="panel-body pan">
                    <div class="form-body pal">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DType.department_category_name">Deparment Category Name<span class="text-danger">*</span></label>
                                    <div class="clearfix"></div>
                                    <input class="form-control" asp-for="DType.department_category_name" />
                                   <span asp-validation-for="DType.department_category_name" class="text-danger"></span>
                                    <div class="clearfix"></div>
                                    <br />

                                    <label asp-for="DType.AcCode">Account Code In Xero<span class="text-danger">*</span></label>
                                    <div class="clearfix"></div>
                                    <input class="form-control" asp-for="DType.AcCode" />
                                    <span asp-validation-for="DType.AcCode" class="text-danger"></span>
                                    <div class="clearfix"></div>
                                    <br />

                                    <label asp-for="DType.is_active">Active</label> &nbsp;
                                    <input asp-for="DType.is_active" type="checkbox" />

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions text-right pal">
                        <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="Save" />
                        <input type="submit" value="Reset" class="btn btn-primary" asp-page-handler="Reset" />
                        <input type="submit" value="Cancel" class="btn btn-primary" asp-page-handler="Cancel" />
                    </div>
                </div>
            </div>
        </div>

    </form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


