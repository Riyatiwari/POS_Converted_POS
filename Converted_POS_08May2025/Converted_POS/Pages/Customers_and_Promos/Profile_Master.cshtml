@page
@model Converted_POS.Pages.Customers_and_Promos.Profile_MasterModel
@{
    ViewData["Title"] = "Profile_Master";
}


@section link {

    <div class="page-header pull-left">
        <ol class="breadcrumb page-breadcrumb pull-left">
            <li>
                <i class="fa fa-home"></i>&nbsp;<a asp-page="/Dashboard">Home</a>&nbsp;&nbsp;
                <i class="fa fa-angle-right"></i>&nbsp;&nbsp;
            </li>
            <li class="active">
                <a asp-page="/Customers_and_Promos/Profile_List">Profile List</a>&nbsp;&nbsp;
                <i class="fa fa-angle-right"></i>&nbsp;&nbsp;
            </li>
            <li class="active"><a asp-page="/Customers_and_Promos/Profile_Master">Profile Master</a></li>
        </ol>
    </div>

}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />

    <div class="col-lg-12 ">
        <div class="panel panel-yellow">
            <div class="panel-heading">Profile Master</div>
            <div class="panel-body pan">
                <div class="form-body pal">

                    <div class="form-group">

                        <div class="row">
                            <div class="col-lg-4">
                                <label asp-for="DType.profile_name"> Profile Name <span class="text-danger">*</span></label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.profile_name" placeholder="Profile Name" />
                                <span asp-validation-for="DType.profile_name" class="text-danger"></span>
                                <div class="clearfix"></div>
                                <br />
                            </div>

                            <div class="col-lg-4">
                                <label asp-for="DType.discount_percent">Discount in %</label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.discount_percent" placeholder="Discount in %" />
                                <div class="clearfix"></div>
                                <br />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <label asp-for="DType.amount">Reedem Value</label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.amount" placeholder="Reedem Value" />
                                <div class="clearfix"></div>
                                <br />
                            </div>

                            <div class="col-lg-4">
                                <label asp-for="DType.bonus_point">Reedeem Point</label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.bonus_point" placeholder="Reedeem Point" />
                                <div class="clearfix"></div>
                                <br />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <label asp-for="DType.earn_bonus">Earn Point</label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.earn_bonus" placeholder="Earn Point" />
                                <div class="clearfix"></div>
                                <br />
                            </div>

                            <div class="col-lg-4">
                                <label asp-for="DType.purchase_amount">On Amount</label>
                                <div class="clearfix"></div>
                                <input class="form-control" asp-for="DType.purchase_amount" placeholder="On Amount" />
                                <div class="clearfix"></div>
                                <br />
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <label asp-for="DType.IsDefault">is default</label> &nbsp;
                                <input asp-for="DType.IsDefault" type="checkbox" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="form-actions text-right pal">
                    <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="Save" />
                    <input type="submit" value="Reset" class="btn btn-primary" asp-page-handler="Reset" />
                    <input type="submit" value="Cancel" class="btn btn-primary" asp-page-handler="Cancel" />
                </div>
            </div>
        </div>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


